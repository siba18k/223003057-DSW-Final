// Firestore security rules for free tier, focusing on basic auth checks and least privilege.
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Hotels are public read, no client writes (seed via admin tool while authenticated)
    match /hotels/{docId} {
      allow read: if true;
      allow create, update, delete: if request.auth != null; // keep simple for demo, tighten in prod
    }

    // Reviews: anyone can read, only signed-in users can create their own
    match /reviews/{docId} {
      allow read: if true;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }

    // Bookings: only owner can read and create their own bookings
    match /bookings/{docId} {
      allow read, create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false;
    }
  }
}
